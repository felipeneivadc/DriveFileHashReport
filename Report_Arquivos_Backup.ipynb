from google.colab import drive
drive.mount('/content/drive')

!pip install pandas openpyxl

import os
import pandas as pd
from datetime import datetime
import hashlib

# Caminhos padrão
drive_path = '/content/drive/My Drive'
output_path = f'{drive_path}/Relatorio_Arquivos_Felipe_Neiva.xlsx'
backup_path = f'{drive_path}/Relatorio_Arquivos_Felipe_Neiva_Backup.xlsx'

# Ignorar atalhos e pastas compartilhadas
def is_shortcut_or_shared(folder):
    if '.shortcut-target' in folder:
        return True
    if 'Shared drives' in folder or 'Compartilhados' in folder:
        return True
    return False

# Carregar relatório anterior
if os.path.exists(output_path):
    df = pd.read_excel(output_path)
    processed_files = set(df['Caminho Completo'].tolist())
else:
    df = pd.DataFrame(columns=[
        "Caminho Completo", "Nome do Arquivo", "Tamanho (Bytes)",
        "Última Modificação", "Hash SHA-256", "Erro Apresentado",
        "Excluir Arquivo"
    ])
    processed_files = set()

# Hash SHA-256
def calculate_hash(file_path):
    sha256_hash = hashlib.sha256()
    try:
        with open(file_path, "rb") as f:
            for byte_block in iter(lambda: f.read(4096), b""):
                sha256_hash.update(byte_block)
        return sha256_hash.hexdigest(), None
    except FileNotFoundError:
        return None, f"Erro: Arquivo não encontrado: {file_path}"
    except PermissionError:
        return None, f"Erro: Permissão negada: {file_path}"
    except Exception as e:
        return None, f"Erro desconhecido: {e}"

file_counter = len(processed_files)
total_files = 0

# Contar arquivos
for root, dirs, files in os.walk(drive_path):
    if not is_shortcut_or_shared(root):
        total_files += len(files)

print(f"Total de arquivos a serem processados: {total_files}")

new_data = []

# Processar arquivos
for root, dirs, files in os.walk(drive_path):
    if is_shortcut_or_shared(root):
        continue

    for file in files:
        file_path = os.path.join(root, file)

        if file_path in processed_files:
            continue

        file_counter += 1
        print(f"Processando arquivo {file_counter}/{total_files}: {file}")

        try:
            file_size = os.path.getsize(file_path)
            last_modified = datetime.fromtimestamp(
                os.path.getmtime(file_path)
            ).strftime('%Y-%m-%d %H:%M:%S')

            file_hash, hash_error = calculate_hash(file_path)

            new_data.append({
                "Caminho Completo": file_path,
                "Nome do Arquivo": file,
                "Tamanho (Bytes)": file_size,
                "Última Modificação": last_modified,
                "Hash SHA-256": file_hash if not hash_error else None,
                "Erro Apresentado": hash_error or "Nenhum",
                "Excluir Arquivo": "Não"
            })

            # Backup periódico
            if file_counter % 1000 == 0:
                df = pd.concat([df, pd.DataFrame(new_data)], ignore_index=True)
                df.to_excel(output_path, index=False)
                new_data = []
                print("Backup salvo.")

        except Exception as e:
            print(f"Erro ao processar o arquivo {file_path}: {e}")
            continue

# Unificar dados
df = pd.concat([df, pd.DataFrame(new_data)], ignore_index=True)

# Criar coluna de diretório
df['Diretório'] = df['Caminho Completo'].apply(os.path.dirname)

# Ordenar para deduplicação
df.sort_values(by=[
    'Hash SHA-256', 'Diretório', 'Última Modificação'
], ascending=[True, True, False], inplace=True)

# Identificar duplicatas
for (file_hash, directory), subset in df.groupby(['Hash SHA-256', 'Diretório']):
    if len(subset) > 1 and subset['Erro Apresentado'].iloc[0] == "Nenhum":
        df.loc[subset.index[1:], 'Excluir Arquivo'] = 'Sim'

df.to_excel(output_path, index=False)

print("Relatório final gerado com sucesso!")
